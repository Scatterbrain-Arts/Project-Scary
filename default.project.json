{
  "name": "Project-Scary",
  "globIgnorePaths": [ "**/.package-lock.json" ],
  "tree": {
    "$className": "DataModel",

    "ServerScriptService": {
      "NevermoreEngine": {
        "$className": "Folder",
        
        "game": {
          "$path": "src/modules"
        },
        "packages": {
          "$path": "node_modules"
        }
      },

      "Main": {
        "$path": "src/scripts/server"
      }
    },

    "ServerStorage": {
      "TreeTasks": {
        "$className": "Folder",

        "Idle": {
          "$path": "src/tasks/idle"
        },
        "Move": {
          "$path": "src/tasks/move"
        },
        "Attack": {
          "$path": "src/tasks/attack"
        },
        "Search": {
          "$path": "src/tasks/search"
        }
      }
    },
    
    "StarterPlayer": {
      "StarterPlayerScripts": {
        "Main": {
          "$path": "src/scripts/client/player"
        }
      },

      "StarterCharacterScripts": {
        "Main": {
          "$path": "src/scripts/client/character"
        }
      }
    }
  }
}