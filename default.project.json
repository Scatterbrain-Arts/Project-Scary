{
  "name": "Project-Scary",
  "globIgnorePaths": [ "**/.package-lock.json" ],
  "tree": {
    "$className": "DataModel",

    "ServerScriptService": {
      "NevermoreEngine": {
        "$className": "Folder",
        
        "game": {
          "$path": "src/modules"
        },
        "packages": {
          "$path": "node_modules"
        }
      },

      "Main": {
        "$path": "src/scripts/server"
      }
    },

    "ServerStorage": {
      "TreeTasks": {
        "$path": "src/tasks"
      }
    },
    
    "StarterPlayer": {
      "StarterPlayerScripts": {
        "Main": {
          "$path": "src/scripts/client"
        }
      }
    }
  }
}